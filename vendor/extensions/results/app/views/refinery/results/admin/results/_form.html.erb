<%= form_for [refinery, :results_admin, @result] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @result,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :result_date -%>
    <%= f.date_select :result_date -%>
  </div>

  <div class='field'>
    <%= f.label :location -%>
    <%= f.text_field :location -%>
  </div>

  <div class='field'>
    <%= f.label :body_of_water -%>
    <%= f.text_field :body_of_water -%>
  </div>

  <div class='field'>
    <%= f.label :place -%>
    <%= f.number_field :place -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.results.admin.results.result'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @result.title) -%>
<% end -%>
