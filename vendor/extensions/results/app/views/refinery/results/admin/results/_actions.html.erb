<ul>
  <% if ::Refinery::Results::Admin::ResultsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.results_admin_results_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_results_admin_result_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Results::Admin::ResultsController.sortable? && ::Refinery::Results::Result.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Results"),
                 refinery.results_admin_results_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Results"),
                 refinery.results_admin_results_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
