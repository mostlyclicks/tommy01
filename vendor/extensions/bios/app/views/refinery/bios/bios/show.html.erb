<% content_for :body_content_title do %>
  <%= @bio.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @bio.name %>
    </p>
  </section>
  <section>
    <h1>Bio Description</h1>
    <p>
      <%=raw @bio.bio_description %>
    </p>
  </section>
  <section>
    <h1>Bio Pict</h1>
    <p>
      <%= image_fu @bio.bio_pict, nil %>
    </p>
  </section>
  <section>
    <h1>Bio Excerpt</h1>
    <p>
      <%=raw @bio.bio_excerpt %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="bios">
      <% @bios.each do |bio| %>
        <li>
          <%= link_to bio.name, refinery.bios_bio_path(bio) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
