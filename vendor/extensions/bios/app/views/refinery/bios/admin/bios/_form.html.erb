<%= form_for [refinery, :bios_admin, @bio] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @bio,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:bio_description, :bio_excerpt],
                :object => "bios/bio" -%>
  </div>

  <div class='field'>
    <%= f.label :bio_pict -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :bio_pict_id,
               :image => @bio.bio_pict,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.bios.admin.bios.bio'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @bio.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
