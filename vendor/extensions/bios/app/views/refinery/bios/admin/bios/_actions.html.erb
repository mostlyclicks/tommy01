<ul>
  <% if ::Refinery::Bios::Admin::BiosController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.bios_admin_bios_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_bios_admin_bio_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Bios::Admin::BiosController.sortable? && ::Refinery::Bios::Bio.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Bios"),
                 refinery.bios_admin_bios_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Bios"),
                 refinery.bios_admin_bios_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
